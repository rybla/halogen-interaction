{
  "name": "halogen-interaction",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "build": "spago build",
    "bundle": "spago bundle --module Main --outfile ./dist/main.js",
    "serve": "bun --hot run index.ts",
    "example.Cli": "bun spago run -m Halogen.Interaction.Interpretation.Cli",
    "example.WidgetSingle": "spago bundle --module Halogen.Interaction.Interpretation.WidgetSingle --outfile ./dist/WidgetSingle/main.js",
    "example.WidgetList": "spago bundle --module Halogen.Interaction.Interpretation.WidgetList --outfile ./dist/WidgetList/main.js"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "esbuild": "^0.24.0",
    "purescript": "^0.15.16-4",
    "readline": "^1.3.0",
    "spago": "^0.93.41"
  }
}